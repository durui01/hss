<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
<hibernate-mapping>

<class name="com.dr.bean.User" table="User" > 
    <id name="id" type="java.lang.Integer" column="id">
          <generator  class="increment"></generator>
    </id>
  
   <property name="firstName" column="firstName" type="string" length="12"></property>
   <property name="lastName" column="lastName" type="string" length="12"></property>
   <property name="age" column="age" type="int" length="12"></property>
  
  </class>

</hibernate-mapping>